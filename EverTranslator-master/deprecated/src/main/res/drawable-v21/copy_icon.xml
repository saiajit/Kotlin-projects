<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item
                android:drawable="@drawable/copy_grey"
                android:state_enabled="false" />
            <item
                android:drawable="@drawable/copy"
                android:state_pressed="false" /> <!-- pressed -->
            <item
                android:drawable="@drawable/copy"
                android:state_pressed="true" /> <!-- focused -->
            <item
                android:drawable="@drawable/copy"
                android:state_enabled="true" /> <!-- idle state -->
        </selector>
    </item>
</layer-list>