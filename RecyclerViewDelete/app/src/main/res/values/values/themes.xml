<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrackOn" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:datePickerDialogTheme">@style/datepicker</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/text_color_brown</item>
        <item name="android:colorPrimary">@color/text_color_brown</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/text_color_black</item>
        <!-- Used for the background -->
        <item name="android:windowBackground">@drawable/bg_white_radius_12</item>
    </style>

    <style name="datepicker" parent="Theme.AppCompat.Light.Dialog">

        <item name="showTitle">true</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorControlActivated">@color/text_color_dark_grey</item>
        <item name="android:selectableItemBackgroundBorderless">@color/color_grey</item>
        <item name="colorControlHighlight">@color/red</item>
        <item name="android:headerBackground">@color/red</item>

    </style>

</resources>